{
  "multipart": [
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "jta:block/crossing_please_wait",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "jta:block/crossing_please_wait",
        "y": -90
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "jta:block/crossing_please_wait"
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "jta:block/crossing_please_wait",
        "y": 90
      }
    }
  ]
}